{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/guard-active-story.sh\" \"$CLAUDE_TOOL_INPUT_FILE_PATH\"",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/guard-tests-first.sh\" \"$CLAUDE_TOOL_INPUT_FILE_PATH\"",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/guard-commit.sh\" \"$CLAUDE_TOOL_INPUT_COMMAND\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/remind-test-review.sh\" \"$CLAUDE_TOOL_INPUT_FILE_PATH\"",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/workflow-guard.sh\" \"$CLAUDE_USER_PROMPT\"",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
